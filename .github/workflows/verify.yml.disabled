name: Verify Blue-Green Failover

on:
  push:
    branches:
      - main
  pull_request:

jobs:
  verify:
    runs-on: ubuntu-latest
    env:
      BLUE_IMAGE: ${{ secrets.BLUE_IMAGE }}
      GREEN_IMAGE: ${{ secrets.GREEN_IMAGE }}
      ACTIVE_POOL: ${{ secrets.ACTIVE_POOL }}
      RELEASE_ID_BLUE: ${{ secrets.RELEASE_ID_BLUE }}
      RELEASE_ID_GREEN: ${{ secrets.RELEASE_ID_GREEN }}
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Validate required variables
        run: |
          missing=0
          for var in BLUE_IMAGE GREEN_IMAGE ACTIVE_POOL RELEASE_ID_BLUE RELEASE_ID_GREEN; do
            if [ -z "${!var:-}" ]; then
              echo "::error::Environment variable ${var} is required but not set."
              missing=1
            fi
          done
          if [ "${missing}" -eq 1 ]; then
            exit 1
          fi

      - name: Create .env for docker compose
        run: |
          cat <<EOF > .env
          BLUE_IMAGE=${BLUE_IMAGE}
          GREEN_IMAGE=${GREEN_IMAGE}
          ACTIVE_POOL=${ACTIVE_POOL}
          RELEASE_ID_BLUE=${RELEASE_ID_BLUE}
          RELEASE_ID_GREEN=${RELEASE_ID_GREEN}
          EOF

      - name: Launch stack
        run: docker compose up -d

      - name: Verify automatic failover
        run: ./tests/verify_failover.sh

      - name: Collect logs on failure
        if: failure()
        run: |
          docker compose ps
          docker compose logs

      - name: Tear down stack
        if: always()
        run: docker compose down -v
